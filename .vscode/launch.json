    "version": "0.2.0",
    "configurations": [
        {
      "name": "Launch PortofolioApi (.NET)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net8.0/PortofolioApi.dll",
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }

    ],
  "inputs": [
    {
      "type": "promptString",
      "id": "programPath",
      "description": "Path to the built DLL to debug (e.g. bin/Debug/net8.0/PortofolioApi.dll)"
    }
  ]
}